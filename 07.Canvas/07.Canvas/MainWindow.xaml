<Window x:Class="_07.Canvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_07.Canvas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas x:Name="canvas">
        <Button x:Name="btn1" Click="Button_Click" Panel.ZIndex="3" Canvas.Top="200" Canvas.Left="100" Content="1" FontSize="50" Width="200" Height="120"></Button>
        <Button x:Name="btn2" Click="Button_Click" Panel.ZIndex="2" Canvas.Bottom="200" Canvas.Left="150" Content="2" FontSize="50" Width="200" Height="120"></Button>
        <Ellipse Fill="Aquamarine" Width="100" Height="120"> </Ellipse>
        <Rectangle Fill="Crimson" Width="100" Height="80" Canvas.Top="100"></Rectangle>
    </Canvas>
</Window>
