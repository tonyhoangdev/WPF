<Window x:Class="_06.DockPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_06.DockPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <Button DockPanel.Dock="Top" Content="1" FontSize="50"></Button>
        <Button DockPanel.Dock="Right" Content="2" FontSize="150"></Button>
        <Button DockPanel.Dock="Bottom" Content="3" FontSize="50"></Button>
        <Button DockPanel.Dock="Left" Content="4" FontSize="120"></Button>
        <Button Content="5" FontSize="200"></Button>
    </DockPanel>
</Window>
